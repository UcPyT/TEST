local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")
local ball = workspace:WaitForChild("TPSSYSTEM"):WaitForChild("TPS")


local followDistance = 3 
local followStrength = 50 
local maxSpeed = 80 


game:GetService("RunService").Heartbeat:Connect(function()
    if (ball.Position - hrp.Position).Magnitude <= followDistance then
        local direction = (hrp.Position - ball.Position).Unit
        local velocity = direction * followStrength
        ball.Velocity = velocity + Vector3.new(0, ball.Velocity.Y, 0)


        if ball.Velocity.Magnitude > maxSpeed then
            ball.Velocity = ball.Velocity.Unit * maxSpeed
        end
    end
end)


for _, p in pairs(game.Players:GetPlayers()) do
    if p ~= player then
        p.CharacterAdded:Connect(function(char)
            local otherHRP = char:WaitForChild("HumanoidRootPart")
            game:GetService("RunService").Heartbeat:Connect(function()
                if (ball.Position - otherHRP.Position).Magnitude < 4 then
                    ball.Velocity = ball.Velocity * 0.2 -- يصير تحكمهم ضعيف
                end
            end)
        end)
    end
end
